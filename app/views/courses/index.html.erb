    <header class="masthead" style="background-image: url(/assets/book.jpg)">
      <div class="overlay"></div>
      <div class="container">
        <div class="row">
          <div class="col-lg-8 col-md-10 mx-auto">
            <div class="site-heading">
              <h1>Rails Classrooms</h1>
              <span class="subheading">List of courses available on Rails Classroom</span>
            </div>
          </div>
        </div>
      </div>
    </header>

    <!-- Main Content -->
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <% @courses.each do |c| %>
          <div class="post-preview">
            <h2 class="post-title">
            <%= link_to "#{c.name}", course_path(c.id) %>
              </h2>
              <h3 class="post-subtitle">
                School: <%= c.school %>
                <br />
                Instructor: <%= User.find(c.user_id).first_name %> <%= User.find(c.user_id).last_name %>
                <br />
                Semester: <%= c.semester %>
                <br />
                Class Time: <%=c.time %>
              </h3>

          </div>
          <% end %>
          <hr>
        </div>
      </div>
